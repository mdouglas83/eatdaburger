<div class="container-fluid" style="max-width: 700px;">

  <div class="row">
    <div class="col-lg-12">
      <div class="page-header" style="padding: 1px 10px 0px 120px; background-repeat: no-repeat; background-size: 100px 100px; background-image: url('./assets/images/burger01.png');">
        <h1><strong>Eat da Burger!</strong></h1>
        <h4>Add it ... Eat it ... Forget about it</h4>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <form class="serve-burger">
        <div class="panel panel-default">
          <div class="panel-heading" style="color: #FFFFFF; background-color: #666666;">
            <h4 style="padding-left: 15px;">Add da Burger!</h4>
          </div>
          <div class="panel-body" style="background-color: #CCCCCC; padding: 30px 30px 15px 30px;">
            <div class="form-group serve-burger">
              <div class="input-group">
                <input type="text" class="form-control" style="font-size: 16px; border: #FFFFFF 1px solid"; id="burger" name="burger" placeholder="you gonna get that burger?">
                <span class="input-group-btn">
                  <button type="submit" class="btn btn-success serve-burger" style="width: 130px;">Add that Burger</button>
                </span>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel">
        <div class="panel-heading" style="color: #FFFFFF; background-color: #666666;">
          <h4 style="padding-left: 15px;">Eat da Burger!!</h4>
        </div>
        <div class="panel-body" style="background-color: #CCCCCC; padding: 30px;">
          {{!-- <ul class="list-group"> --}}
            {{#each burgers}}
              {{#unless eaten}}
                {{> burgers/uneaten-block}}
              {{/unless}}
            {{/each}}
          {{!-- </ul> --}}
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel">
        <div class="panel-heading" style="color: #FFFFFF; background-color: #666666;">
          <h4 style="padding-left: 15px;">Forget about it...</h4>
        </div>
        <div class="panel-body" style="background-color: #CCCCCC; padding: 30px;">
          {{!-- <ul class="list-group"> --}}
            {{#each burgers}}
              {{#if eaten}}
                {{> burgers/eaten-block}}
              {{/if}}
            {{/each}}
          {{!-- </ul> --}}
        </div>
      </div>

    </div>
  </div>

</div>